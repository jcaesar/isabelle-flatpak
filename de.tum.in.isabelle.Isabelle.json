{
	"app-id": "de.tum.in.isabelle.Isabelle",
	"runtime": "org.kde.Platform",
	"runtime-version": "5.10",
	"sdk": "org.kde.Sdk",
	"command": "Isabelle2017",
	"finish-args": [
		"--socket=x11",
		"--persist=.isabelle",
		"--share=ipc"
	],
	"modules": [
		{
			"name": "isabelle-bin",
			"sources": [
				{
					"type": "archive",
					"url": "https://isabelle.in.tum.de/dist/Isabelle2017_app.tar.gz",
					"sha256": "fca55aade626b611f4167d6fede2647247e746c6286cb40a9655392f55fe6107"
				},
				{
					"type": "file",
					"path": "de.tum.in.isabelle.Isabelle.appdata.xml"
				},
				{
					"type": "file",
					"path": "de.tum.in.isabelle.Isabelle.desktop"
				}
			],
			"buildsystem": "simple",
			"build-commands": [
				"mkdir share/{,icons/hicolor/{128x128,64x64,32x32}/apps},applications,appdata}",
				"mv *.appdata.xml share/appdata",
				"mv *.desktop share/applications",
				"cp src/Tools/VSCode/extension/isabelle.png share/icons/de.tum.isabelle.Isabelle.png",
				"cp -ar * /app"
			]
		}
	]
}
